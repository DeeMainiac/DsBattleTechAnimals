        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Turkey/Dessicated_TurkeyHen</texPath>
          <drawSize>1.0</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/dsBTA_JadeFalcon/dsBTA_JadeFalcon</texPath>
          <drawSize>.6</drawSize>
          <shadowData>
            <volume>(0.3, 0.3, 0.3)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Turkey/Dessicated_TurkeyHen</texPath>
          <drawSize>1.2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/dsBTA_JadeFalcon/dsBTA_JadeFalcon</texPath>
          <drawSize>.75</drawSize>
          <shadowData>
            <volume>(0.4, 0.4, 0.4)</volume>
            <offset>(0,0,-0.2)</offset>
          </shadowData>
        </bodyGraphicData>

        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Turkey/Dessicated_TurkeyHen</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>


