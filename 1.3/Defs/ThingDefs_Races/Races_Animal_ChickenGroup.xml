<Defs>

<!-- Jade Falcon-->

<ThingDef ParentName="BigBirdThingBase">
    <defName>dsBTA_JadeFalcon</defName>
    <label>jade falcon</label>
    <description>A genetically engineered falcon capable of engaging prey twice as large as itself. It was originally designed to hunt poisonous and venomous creatures. It is quite difficult to tame.</description>
    <statBases>
      <MoveSpeed>3.6</MoveSpeed>
      <MarketValue>150</MarketValue>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
      <FilthRate>6</FilthRate>
    </statBases>
    <race>
      <herdAnimal>false</herdAnimal>
      <baseBodySize>0.5</baseBodySize>
	  <predator>true</predator>
	  <maxPreyBodySize>.9</maxPreyBodySize>
      <baseHealthScale>0.6</baseHealthScale>
      <baseHungerRate>0.28</baseHungerRate>
      <foodType>CarnivoreAnimal, OvivoreAnimal</foodType>
      <wildness>0.45</wildness>
      <trainability>Advanced</trainability>
      <lifeExpectancy>10</lifeExpectancy>
	<useMeatFrom>Cassowary</useMeatFrom>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.12</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2</minAge>
        </li>
      </lifeStageAges>
	  			<wildBiomes>
				<AridShrubland>.2</AridShrubland>
				<BorealForest>0</BorealForest>
				<ColdBog>0</ColdBog>
				<TemperateForest>.2</TemperateForest>
				<TemperateSwamp>.2</TemperateSwamp>
				<TropicalRainforest>0</TropicalRainforest>
				<TropicalSwamp>0</TropicalSwamp>
				<IceSheet>0</IceSheet>
				<SeaIce>0</SeaIce>
				<Tundra>0</Tundra>
				<Desert>0</Desert>
				<ExtremeDesert>0</ExtremeDesert>
			</wildBiomes>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>dsBTA_EggJadeFalconFertilized</eggFertilizedDef>
		<eggUnfertilizedDef>dsBTA_EggJadeFalconUnfertilized</eggUnfertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>10</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>15</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>15</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="BigBirdKindBase">
    <defName>dsBTA_JadeFalcon</defName>
    <label>jade falcon</label>
    <race>dsBTA_JadeFalcon</race>
    <combatPower>50</combatPower>
    <lifeStages>
      <li>
